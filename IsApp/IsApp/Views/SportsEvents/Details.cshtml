@model IsApp.Domain.Models.SportsEvent

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>SportsEvent</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Team 1
            </th>
            <th> Team 2 </th>
            <th> Date </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MatchSchedules)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamId1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamId2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td><a asp-action="Delete" asp-controller="MatchSchedules" asp-route-id="@item.Id">Delete</a></td>

            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
